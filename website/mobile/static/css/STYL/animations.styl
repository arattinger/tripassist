@keyframes viewoutright
    0%
        transform-origin 100% 100%
        -ms-transform-origin 100% 100%
        -webkit-transform-origin 100% 100%
        transform rotateY(0deg)
        -ms-transform rotateY(0deg)
        -webkit-transform rotateY(0deg)
        opacity 1.0
    100%
        transform-origin 100% 100%
        -ms-transform-origin 100% 100%
        -webkit-transform-origin 100% 100%
        transform rotateY(-90deg)
        -ms-transform rotateY(-90deg)
        -webkit-transform rotateY(-90deg)
        opacity 0.0

@keyframes viewinleft
    0%
        transform-origin 0% 0%
        -ms-transform-origin 0% 0%
        -webkit-transform-origin 0% 0%
        transform rotateY(-90deg)
        -ms-transform rotateY(-90deg)
        -webkit-transform rotateY(-90deg)
        opacity 0.0
    100%
        transform-origin 0% 0%
        -ms-transform-origin 0% 0%
        -webkit-transform-origin 0% 0%
        transform rotateY(0deg)
        -ms-transform rotateY(0deg)
        -webkit-transform rotateY(0deg)
        opacity 1.0

@keyframes viewoutleft
    0%
        transform-origin 0% 0%
        -ms-transform-origin 0% 0%
        -webkit-transform-origin 0% 0%
        transform rotateY(0deg)
        -ms-transform rotateY(0deg)
        -webkit-transform rotateY(0deg)
        opacity 1.0
    100%
        transform-origin 0% 0%
        -ms-transform-origin 0% 0%
        -webkit-transform-origin 0% 0%
        transform rotateY(-90deg)
        -ms-transform rotateY(-90deg)
        -webkit-transform rotateY(-90deg)
        opacity 0.0

@keyframes viewinright
    0%
        transform-origin 100% 100%
        -ms-transform-origin 100% 100%
        -webkit-transform-origin 100% 100%
        transform rotateY(-90deg)
        -ms-transform rotateY(-90deg)
        -webkit-transform rotateY(-90deg)
        opacity 0.0
    100%
        transform-origin 100% 100%
        -ms-transform-origin 100% 100%
        -webkit-transform-origin 100% 100%
        transform rotateY(0deg)
        -ms-transform rotateY(0deg)
        -webkit-transform rotateY(0deg)
        opacity 1.0

.viewout-right
    animation viewoutright 0.3s
    animation-iteration-count 1
    -webkit-animation viewoutright 0.3s 
    -webkit-animation-iteration-count 1

.viewin-left
    animation viewinleft 0.3s
    animation-iteration-count 1
    -webkit-animation viewinleft 0.3s 
    -webkit-animation-iteration-count 1

.viewout-left
    animation viewoutleft 0.3s
    animation-iteration-count 1
    -webkit-animation viewoutleft 0.3s 
    -webkit-animation-iteration-count 1

.viewin-right
    animation viewinright 0.3s
    animation-iteration-count 1
    -webkit-animation viewinright 0.3s 
    -webkit-animation-iteration-count 1