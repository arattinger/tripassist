@import 'definitions'

.list-ctn
    margin 10px
    margin-bottom 25px

    .sublist
        font-size mediumFontSize
        clear both

    ul 
        list-style-type none
        margin 0px
        margin-top 10px
        padding-left 10px

        li
            clear right
            overflow auto
            
            &:last-child
                margin-bottom 25px

            .label
                float left 
                font-size largeFontSize
                display: table-cell
                vertical-align: middle

            .info-ctn
                width 42px
                height 42px
                margin 5px
                float right

                p
                    margin 0px
                    font-size smallFontSize

