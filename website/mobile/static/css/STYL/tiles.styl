tile()
    max-width 200px
    max-height 200px
    margin 10px
    position absolute
    background-color white
    background-size 100% 100%
    background-position center
    background-repeat no-repeat

.tiles-wrapper
    text-align center
    width: 100%
    height: 100%

    .tiles-ctn
        position relative
        width 90%
        max-width 420px
        max-height 90%
        display inline-block

        .dummy-tile
            margin-top: 100%

        #route-tile
            tile()
            right 50%
            left: 0%
            top: 0%
            bottom: 50%
            background-image url('/static/images/routes.png')

        #accomm-tile
            tile()
            right 0%
            left: 50%
            top: 0%
            bottom: 50%
            background-image url('/static/images/accommodations.png')

        #places-tile
            tile()
            right 50%
            left: 0%
            top: 50%
            bottom: 0%
            background-image url('/static/images/places.png')

        #schedule-tile
            tile()
            right 0%
            left: 50%
            top: 50%
            bottom: 0%
            background-image url('/static/images/schedule.png')
