body
    background black
    color white
    font-family Verdana, Sans-serif
    margin 0px
    height 100%
    width 100%

smallbutton()
    width 42px
    height 42px
    margin 5px
    background-size 42px 42px
    background-position center
    background-repeat no-repeat
    background-image url('/static/images/'arguments'.png')

.hidden
    display: none

#header-ctn
    margin-left 5px
    margin-right 5px

    #back-btn
        smallbutton 'back'
        float: left

    #settings-btn
        smallbutton 'settings'
        float right

    #title
        float left
        font-size 26px
        margin-left 10px
        margin-top 10px

#content-ctn
    position absolute
    top 60px
    left 0px
    bottom 0px
    right 0px
    min-height 10px
    width 100%
    overflow auto

.del-btn
    smallbutton 'delete'
    float right

.download-btn
    smallbutton 'download'
    float right
